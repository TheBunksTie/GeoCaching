<Window x:Class="Swk5.GeoCaching.Desktop.GeocachingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Swk5.GeoCaching.Desktop"
        Title="GeoCac#ing Desktop v0.1" Height="500" Width="800"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="BlueViolet" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5">
            <TabItem Header="User">
                <Grid Background="#FFE5E5E5">
                    <!-- no special data context needed, the basic one form here will be passed through  -->
                    <controls:UserEditor Margin="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Caches">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Statistics">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
