<Window x:Class="Swk5.GeoCaching.Desktop.GeocachingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:user="clr-namespace:Swk5.GeoCaching.Desktop.Views.User"
        xmlns:statistics="clr-namespace:Swk5.GeoCaching.Desktop.Views.Statistics"
        xmlns:cache="clr-namespace:Swk5.GeoCaching.Desktop.Views.Cache"
        Title="GeoCac#ing Desktop v0.1" Height="700" Width="900"
        ResizeMode="CanMinimize">
    
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5">
            <TabItem Header="Users">
                <user:UserEditor/>
            </TabItem>
            <TabItem Header="Caches">
                <cache:CacheEditor/>
            </TabItem>
            <TabItem Header="Map">
                <cache:CacheMapEditor/>
            </TabItem>
            <TabItem Header="Statistics">
                <statistics:StatisticsControl />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
