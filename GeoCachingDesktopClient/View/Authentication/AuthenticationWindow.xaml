<Window x:Class="Swk5.GeoCaching.Desktop.View.Authentication.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please authenticate youreself..." Height="280" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center"  Text="Cac#ing.Desktop" Margin="10,10,10,2" />
        <TextBlock Grid.Row="1" Text="User name:" Margin="10,10,10,2" />
        <TextBox Grid.Row="2" Name="UsernameBox" Margin="10,2" x:FieldModifier="private" Text="Eva755" />

        <TextBlock Grid.Row="3" Text="Password:" Margin="10,10,10,2"/>
        <PasswordBox Grid.Row="4" Name="PasswordBox" Margin="10,2,10,10" x:FieldModifier="private" Password="test"/>
        
        <Button Grid.Row="5" Name="LoginButton" Margin="50,10" Click="LoginButton_OnClick">Login</Button>
        <!--<Button Grid.Row="6" Name="QuitButton"  Margin="50,10" Command="Close">Quit</Button>-->

    </Grid>
</Window>
